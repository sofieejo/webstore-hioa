@model Webstore.Models.customer

@{
    Layout = "~/Views/Shared/_loginlayout.cshtml";
}

<div id="log-in-box">
    @using(Html.BeginForm()){
    @Html.ValidationSummary(true)
    <fieldset>
        <div>
            @Html.LabelFor(model => model.email, "E-mail")
        </div>

        @Html.EditorFor(model => model.email)
           
        <div>
            <label for="password">Password</label>
        </div>
          
        @Html.Password("Password")

        <div>
            <input type="submit" value="Log In" />
        </div>
    
    </fieldset>
@Html.ActionLink("Become a registered customer", "../customer/registerCustomer")
        
<h3>@ViewBag.logInMessage</h3>
}

</div>

@Html.ActionLink("Go to store without logging in.", "../product/showallproducts")